{% extends 'espaceMembres/layout.html.twig' %}

{% block content %}
    <h1>Reunions</h1>
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="input-group" >

                <a class="btn btn-white btn-default btn-lg active" href="{{ path('admin_reunion_new')}}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>

        </div>
    </div>
<div class="panel-body">

    <table class="table text-center">
        <thead>
            <tr>
                <th class="text-center">Titre</th>
                <th class="text-center">Datedebut</th>
                <th class="text-center">Datefin</th>
               {# <th>Ville</th>
                <th>Adresse</th>
                <th>Cp</th>
                <th>Description</th>
                <th>Visibilite</th> #}
                <th class="text-center">Libelle</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reunion in reunions %}
            <tr>
                <td>{{ reunion.titre }}</td>
                <td>{% if reunion.dateDebut %}{{ reunion.dateDebut|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if reunion.dateFin %}{{ reunion.dateFin|date('Y-m-d H:i:s') }}{% endif %}</td>
               {# <td>{{ reunion.ville }}</td>
                <td>{{ reunion.adresse }}</td>
                <td>{{ reunion.cp }}</td>
                <td>{{ reunion.description }}</td>
                <td>{% if reunion.visibilite %}Yes{% else %}No{% endif %}</td>
                #}
                <td>{{ reunion.libelle }}</td>
                <td>
                    <div class="input-group-btn">

                        <a class="btn btn-white btn-default  " href="{{ path('membre_reunion_show', { 'id': reunion.id })}}">Afficher</a>
                        <a class="btn btn-white btn-default  " href="{{ path('admin_reunion_edit', { 'id': reunion.id })}}">Modifier</a>
                    </div>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>

{% endblock %}
