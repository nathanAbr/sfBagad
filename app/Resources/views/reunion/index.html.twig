{% extends 'espaceMembres/layout.html.twig' %}

{% block content %}
    <h1>Reunions list</h1>
<div class="panel-body">

    <table class="table">
        <thead>
            <tr>
                <th>Datedebut</th>
                <th>Datefin</th>
                <th>Ville</th>
                <th>Adresse</th>
                <th>Cp</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Visibilite</th>
                <th>Libelle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reunion in reunions %}
            <tr>
                <td>{% if reunion.dateDebut %}{{ reunion.dateDebut|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if reunion.dateFin %}{{ reunion.dateFin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ reunion.ville }}</td>
                <td>{{ reunion.adresse }}</td>
                <td>{{ reunion.cp }}</td>
                <td>{{ reunion.titre }}</td>
                <td>{{ reunion.description }}</td>
                <td>{% if reunion.visibilite %}Yes{% else %}No{% endif %}</td>

                <td>{{ reunion.libelle }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_show', { 'id': reunion.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_edit', { 'id': reunion.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <button type="button" class="btn btn-default btn-lg" data-toggle="modal" data-target=".add-example-modal-lg">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    </button>
    <div class="modal fade add-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Ajouter une reunion</h4>
                </div>
                <div class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                    <button type="button" class="btn btn-primary"><a href=" {{ path('em_reunion_add') }}"></a> Enregistrer</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade edit-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Modifier</h4>
                </div>
                <div class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                    <button type="button" class="btn btn-primary"><a href=" {{ path('em_reunion_sup') }}"></a>Enregistrer</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
