{% extends 'espaceMembres/layout.html.twig' %}

{% block content %}
    <h1>Sessions</h1>

    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="input-group" >
                <button type="button" class="btn btn-default btn-lg" data-toggle="modal" data-target=".add-example-modal-lg">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                </button>
            </div>
        </div>
    <div class="panel-body">

    <table class="table text-center">
        <thead>
            <tr>
                <th class="text-center">Titre</th>
                <th class="text-center">Datedebut</th>
                <th class="text-center">Datefin</th>
                <th>Ville</th>
                <th>Adresse</th>
                <th>Description</th>
                <th>Instrument</th>
                <th>Professeur</th>
                {#
                <th>Cp</th>
                <th>Visibilite</th> #}
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for session in sessions %}
            <tr>
                <td>{{ session.titre }}</td>
                <td>{% if reunion.dateDebut %}{{ session.dateDebut|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if reunion.dateFin %}{{ session.dateFin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ session.ville }}</td>
                <td>{{ session.adresse }}</td>
                <td>{{ session.description }}</td>
                <td>{{ session.instrument }}</td>
                <td>{{ session.professeur }}</td>
                {#  <td>{{ session.cp }}</td>
                <td>{% if session.visibilite %}Yes{% else %}No{% endif %}</td>
                <td>{{ reunion.libelle }}</td>
               #}
                <td>
                    <div class="input-group-btn">

                        <button type="button" class="btn btn-default"><a href="{{ path('admin_session_show', { 'id': reunion.id }) }}"></a >Afficher</button>
                        <button type="button" class="btn btn-default" data-toggle="modal" data-target=".edit-example-modal-lg">Modifier</button>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    </div>

    <div class="modal fade add-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h2 class="modal-title" id="myModalLabel">Ajouter une session</h2>
                </div>
                <div class="modal-body">
                    {{include('session/new.html.twig')}}

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                    <button type="button" class="btn btn-primary"> Enregistrer</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade edit-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h2 class="modal-title" id="myModalLabel">Modifier</h2>
                </div>
                <div class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                    <button type="button" class="btn btn-primary"><a href=" "></a>Enregistrer</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
