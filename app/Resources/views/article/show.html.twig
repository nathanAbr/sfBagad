{% extends 'espaceMembres/layout.html.twig' %}


{% block content %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.contenu }}</td>
            </tr>
            <tr>
                <th>Datecreation</th>
                <td>{% if article.dateCreation %}{{ article.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Visibilite</th>
                <td>{% if article.visibilite %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Actions</th>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_article_index') }}">Back to the list</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_article_edit', { 'id': article.id }) }}">Edit</a>
                        </li>
                        <li>
                            {{ form_start(delete_form) }}
                            <input type="submit" value="Delete">
                            {{ form_end(delete_form) }}
                        </li>
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>


{% endblock %}
