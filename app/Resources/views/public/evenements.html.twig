{% extends 'public/layout.html.twig' %}

{% block body %}
    {{ parent() }}
    {% block content %}
        <div class="container">
            <div id="calendar"></div>
        </div>
    {% endblock %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {

            // page is now ready, initialize the calendar...

            $('#calendar').fullCalendar({
                firstDay: 1,
                nowIndicator:true,
                locale: 'fr',
                columnFormat: 'dddd',
                events: '/dataEvent'
            })

        });
    </script>
{% endblock %}
