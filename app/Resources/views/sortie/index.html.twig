{% extends 'espaceMembres/layout.html.twig' %}

{% block content %}
    <h1>Sorties</h1>

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="input-group" >
            <button type="button" class="btn btn-default btn-lg" data-toggle="modal" data-target=".add-example-modal-lg">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </button>
        </div>
    </div>
    <div class="panel-body">
    <table class="table text-center">
        <thead>
            <tr>
                <th>Datedebut</th>
                <th>Datefin</th>
                <th>Ville</th>
                <th>Adresse</th>
                <th>Cp</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Cachet</th>
                <th>Valid√©e</th>
                <th>Repas</th>
                <th>Tenue</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            <tr>
                <td>{% if sortie.dateDebut %}{{ evenement.dateDebut|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if sortie.dateFin %}{{ evenement.dateFin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ sortie.ville }}</td>
                <td>{{ sortie.adresse }}</td>
                <td>{{ sortie.cp }}</td>
                <td>{{ sortie.titre }}</td>
                <td>{{ sortie.description }}</td><td>{{ sortie.cachet }}</td>
                <td>{% if sortie.validation %}Yes{% else %}No{% endif %}</td>
                <td>{{ sortie.repas }}</td>
                <td>{% if sortie.tenue %}Yes{% else %}No{% endif %}</td>
                <td>


                    <div class="input-group-btn">
                        <form method="DELETE" action="{{ path('admin_evenement_delete', {id: sortie.id} }}">
                            <button type="button" class="btn btn-default">DELETE</button>
                        </form>
                        <button type="button" class="btn btn-default"><a href="{{ path('admin_sortie_show', { 'id': sortie.id }) }}"></a >Afficher</button>
                        <button type="button" class="btn btn-default" data-toggle="modal" data-target=".edit-example-modal-lg">Modifier</button>
                    </div>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    </div>

    <div class="modal fade add-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h2 class="modal-title" id="myModalLabel">Ajouter une session</h2>
                </div>
                <div class="modal-body">
                    {{include('sortie/new.html.twig')}}

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                    <button type="button" class="btn btn-primary"><a href=" {{ path('em_reunion_add') }}"></a> Enregistrer</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade edit-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h2 class="modal-title" id="myModalLabel">Modifier</h2>
                </div>
                <div class="modal-body">


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                    <button type="button" class="btn btn-primary"><a href=" {{ path('em_reunion_sup') }}"></a>Enregistrer</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
